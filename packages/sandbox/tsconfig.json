{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@guahanweb-portfolios/config-tsconfig/node.json",
    "compilerOptions": {
        "target": "es6",
        "module": "Node16",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "outDir": "./dist",
        "types": [
            "node",
            "jest"
        ],
        "lib": [
            "ES6",
            "DOM"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
